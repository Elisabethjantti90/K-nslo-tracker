      }
    };

    // ------------------------
    // DOM-element
    // ------------------------
    document.addEventListener("DOMContentLoaded", () => {
    const feelingSelect = document.getElementById("feelingSelect");
    const showTipBtn = document.getElementById("showTipBtn");
    const saveBtn = document.getElementById("saveBtn");
    const tipText = document.getElementById("tipText");
    const noteInput = document.getElementById("noteInput");
    const historyList = document.getElementById("historyList");
    const nuanceSelect = document.getElementById("nuanceSelect");

  console.log("feelingSelect:", feelingSelect);
  console.log("nuanceSelect:", nuanceSelect);
    // ------------------------
    // Nyanser per grundk√§nsla
    // ------------------------
   const nuances = {
  ilska: ["irriterad","frustrerad","kr√§nkt","avundsjuk","ursinnig","bitter"],
  r√§dsla: ["oro","nerv√∂s","skr√§ckslagen","√∂verv√§ldigad","v√§rdel√∂s","hotad","skr√§md"],
  avsky: ["motvilja","√§cklad","f√∂rakt","ogillande","avsmak","tveksam","f√∂rf√§rad"],
  skam: ["misslyckad","skuld","generad","√•nger","d√•ligt samvete","blyg","undvikande"],
  sorg: ["s√•rbar","ensam","maktl√∂s","sk√∂r","olycklig","bedr√∂vad","nedst√§md"],
  gl√§dje: ["optimistisk","lycklig","stolt","k√§rleksfull","hoppfull","inspirerad","euforisk"]
};
    // N√§r man v√§ljer grundk√§nsla ‚Äì uppdatera nyanser
 function resetNuanceSelect() {
    nuanceSelect.innerHTML = '<option value="">‚Äì V√§lj nyans ‚Äì</option>';
    nuanceSelect.value = "";
    nuanceSelect.disabled = true;
  }

  resetNuanceSelect();

  feelingSelect.addEventListener("change", () => {
    const value = feelingSelect.value;
    console.log("Vald grundk√§nsla:", value);

    resetNuanceSelect();
    if (!value || !nuances[value]) return;

    nuances[value].forEach((nuance) => {
      const option = document.createElement("option");
      option.value = nuance;
      option.textContent = nuance.charAt(0).toUpperCase() + nuance.slice(1);
      nuanceSelect.appendChild(option);
    });

    nuanceSelect.disabled = false;
  });
});

    // ------------------------
    // Historik-funktioner
    // ------------------------
    function loadHistory() {
      const raw = localStorage.getItem("kansloTrackerHistory");
      if (!raw) return [];
      try {
        return JSON.parse(raw);
      } catch (e) {
        console.error("Kunde inte l√§sa historik:", e);
        return [];
      }
    }

    function saveHistory(history) {
      localStorage.setItem("kansloTrackerHistory", JSON.stringify(history));
    }

    function renderHistory() {
      const history = loadHistory();
      historyList.innerHTML = "";

      if (history.length === 0) {
        historyList.textContent = "Ingen historik √§nnu. B√∂rja med att spara en k√§nsla.";
        return;
      }

      history.forEach(entry => {
        const div = document.createElement("div");
        div.className = "history-item";

        const dateText = new Date(entry.timestamp).toLocaleString("sv-SE");
        div.innerHTML = `
          <strong>${entry.feeling}${entry.nuance ? " ‚Äì " + entry.nuance : ""}</strong>
          <small>${dateText}</small>
          ${entry.tip ? `<div>${entry.tip.replace(/\n/g, "<br>")}</div>` : ""}
          ${entry.note ? `<div><em>${entry.note}</em></div>` : ""}
        `;
        historyList.appendChild(div);
      });
    }

    // ------------------------
    // Visa tips
    // ------------------------
    showTipBtn.addEventListener("click", () => {
      const feeling = feelingSelect.value;
      const nuance = nuanceSelect.value;

      if (!feeling) {
        tipText.textContent = "V√§lj en grundk√§nsla f√∂rst.";
        return;
      }

      let tips = [];

      // F√∂rst: f√∂rs√∂k hitta tips f√∂r nyans
      if (
        nuance &&
        tipsPerNuance[feeling] &&
        tipsPerNuance[feeling][nuance] &&
        tipsPerNuance[feeling][nuance].length > 0
      ) {
        tips = tipsPerNuance[feeling][nuance];
      } else {
        // annars: fall tillbaka till grundk√§nslan
        tips = tipsPerFeeling[feeling] || [];
      }

      if (!tips || tips.length === 0) {
        tipText.textContent = "Inga tips hittades f√∂r den h√§r k√§nslan √§nnu.";
        return;
      }

      // V√§lj upp till 3 unika slumpade tips
      const maxCount = Math.min(3, tips.length);
      const usedIndices = new Set();
      const selectedTips = [];

      while (selectedTips.length < maxCount) {
        const randomIndex = Math.floor(Math.random() * tips.length);
        if (!usedIndices.has(randomIndex)) {
          usedIndices.add(randomIndex);
          selectedTips.push(tips[randomIndex]);
        }
      }

      tipText.textContent = selectedTips.map(t => "‚Ä¢ " + t).join("\n\n");
    });

    // ------------------------
    // Spara i historik
    // ------------------------
    saveBtn.addEventListener("click", () => {
      const feeling = feelingSelect.value;
      if (!feeling) {
        alert("V√§lj en grundk√§nsla innan du sparar.");
        return;
      }

      const history = loadHistory();
      const entry = {
        feeling,
        nuance: nuanceSelect.value || "",
        tip: tipText.textContent || "",
        note: noteInput.value.trim(),
        timestamp: Date.now()
      };
      history.unshift(entry);
      saveHistory(history);
      renderHistory();

      noteInput.value = "";
    });

    // Init
    renderHistory();
  </script>
</body>
</html>
